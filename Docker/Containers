Docker containers:
#0 Postgress
docker run -d --name postgresCont -p 5432:5432 -e POSTGRES_PASSWORD=pass123 postgres
docker exec -it some-postgres bash
postgres#
psql -h localhost -U docker_user
 \l
 CREATE TABLE creators
 (
     Id SERIAL PRIMARY KEY,
     FirstName CHARACTER VARYING(30),
     LastName CHARACTER VARYING(30),
     Email CHARACTER VARYING(30),
     Age INTEGER
 );
 \d creators
 \dt
 insert into creators values  (1, 'Luka', 'Fingastation', 'finga@gmail.com' );
 insert into creators values (2, 'Nini', 'Banidze', 'nini@gmail.com', 32);
 insert into creators values (0, 'Felix', 'Kissinger', 'felix@gmail.com', 32), (1, 'Luka', 'Fingastation', 'finga@gmail.com' );
 select * from creators;


#1 Postgres with VOLUMES

docker volume create postgres-volume
docker run --name learn_postgres -e POSTGRES_PASSWORD=docker_user -e POSTGRES_USER=docker_user -p 5433:5432 -v pgdata:/var/lib/postgresql/data -d postgres
docker exec -it db bash

/var/lib/docker/volumes/db/


