 #3 java app with wildfly from Dockerfile

docker build --no-cache -t wildfly-app .
docker run -d  -p 8080:8080 wildfly-app
docker run -p 8080:8080 -p 9990:9990 -d wildfly-app /opt/jboss/wildfly/bin/standalone.sh -b 0.0.0.0 -bmanagement 0.0.0.0
docker exec -it b5bd984be9a1 bash
cd /opt/jboss/wildfly/bin
sh add-user.sh


find / -type d -name 'httpdocs'